---
const tools = await Astro.glob('../plugins/*.ts')
import Layout from '../components/layout.astro'
import type { Tool } from '../types/tool';
const formattedTools: Tool[] = tools.map((tool) => tool.default)
import PluginsList from '../components/plugins'
---

<Layout title="StreamerTools | All the tools you need to step up your stream" description="StreamerTools is curated streamers tools to help you to find the best way to enhance you stream experience" image="https://streamertools.app/og.jpg">
	<div class="text-center py-10 md:py-20">
		<h1 class="font-bold text-3xl md:text-5xl lg:text-7xl mb-5">The best OBS plugins<br />for your streams</h1>
		<h2>Curated OBS plugins to enhance your stream</h2>
	</div>
	<PluginsList tools={formattedTools} client:visible />
</Layout>
