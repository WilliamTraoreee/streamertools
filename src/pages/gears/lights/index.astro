---
import GearGrid from '../../../components/gear-grid.astro';
import GearNav from '../../../components/gear-nav.astro';
import Layout from '../../../components/layout.astro'
import type { Gears } from '../../../types/gear';
const gears = await Astro.glob('../../../gears/lights/*.ts')
const formattedGears: Gears = gears.map((gear) => gear.default)

const choice = ['godox-sl60w', 'elgato-key-light-air']
---

<Layout title="Lights | StreamerTools" description="StreamerTools find the best lights for your budget to improve your stream" image="https://streamertools.app/og.jpg">
	<div class="text-center py-10 md:py-20">
		<h1 class="font-bold text-3xl md:text-5xl lg:text-7xl mb-5">The best lights for your stream setup</h1>
		<h2>Find a light that fit your budget and your needs</h2>
	</div>

  <div class="flex gap-6 flex-col lg:flex-row">
    <GearNav />
    
    <div>
      <GearGrid gears={formattedGears}  path="lights" choice={choice} />
    </div>

  </div>
</Layout>