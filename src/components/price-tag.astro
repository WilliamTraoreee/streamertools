---
const { prices } = Astro.props
---

<Fragment>
  {prices.length === 1 && prices.includes('free') && (
    <span class="bg-green-500 text-white px-2 rounded h-7 text-sm inline-flex items-center font-medium">
      Free
    </span>
  )}
  {prices.length === 1 && prices.includes('paid') && (
    <span class="bg-rose-500 text-white px-2 rounded h-7 text-sm inline-flex items-center font-medium">
      $
    </span>
  )}
  {prices.length === 2 && (
    <span class="bg-rose-500 text-white px-2 rounded h-7 text-sm inline-flex items-center font-medium">
      Free + $
    </span>
  )}
</Fragment>